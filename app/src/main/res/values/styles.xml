<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DigitButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#D3D3D3</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:width">@dimen/button_size</item>
        <item name="android:height">@dimen/button_size</item>
        <item name="android:maxWidth">@dimen/button_size</item>
        <item name="android:maxHeight">@dimen/button_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DigitButtonLandscape">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#D3D3D3</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:width">@dimen/button_size_landscape</item>
        <item name="android:height">@dimen/button_size_landscape</item>
        <item name="android:maxWidth">@dimen/button_size_landscape</item>
        <item name="android:maxHeight">@dimen/button_size_landscape</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ActionButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#a9a9a9</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:width">@dimen/button_size</item>
        <item name="android:height">@dimen/button_size</item>
        <item name="android:maxWidth">@dimen/button_size</item>
        <item name="android:maxHeight">@dimen/button_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ActionButtonLandscape">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#a9a9a9</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:width">@dimen/button_size_landscape</item>
        <item name="android:height">@dimen/button_size_landscape</item>
        <item name="android:maxWidth">@dimen/button_size_landscape</item>
        <item name="android:maxHeight">@dimen/button_size_landscape</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>