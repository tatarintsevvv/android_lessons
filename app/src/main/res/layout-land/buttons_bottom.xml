<?xml version="1.0" encoding="utf-8"?>
<android.widget.TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toBottomOf="@+id/resultTopLayout"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="wrap_content">

        <com.google.android.material.button.MaterialButton
            style="@style/ActionButtonLandscape"
            android:id="@+id/buttonCE"
            android:text="@string/text_button_ce">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/ActionButtonLandscape"
            android:id="@+id/buttonC"
             android:text="@string/text_button_c">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBackspace"
            style="@style/ActionButtonLandscape"
            android:layout_weight="1"
            android:foreground="@android:drawable/ic_menu_close_clear_cancel"
            android:foregroundGravity="center_vertical|center_horizontal">
            >

        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/ActionButtonLandscape"
            android:id="@+id/buttonDivide"
            android:text="@string/text_button_divide">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonChangeSign"
            style="@style/ActionButtonLandscape"
            android:text="@string/text_button_change_sign">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMathSeparator"
            style="@style/ActionButtonLandscape"
            android:text="@string/text_button_math_separator">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/ActionButtonLandscape"
            android:id="@+id/buttonMultiply"
            android:text="@string/text_button_multiply">
        </com.google.android.material.button.MaterialButton>

    </TableRow>
    <TableRow
        android:layout_width="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button7"
            style="@style/DigitButtonLandscape"
            android:text="@string/text_button_seven">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/DigitButtonLandscape"
            android:id="@+id/button8"
            android:text="@string/text_button_eight">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/DigitButtonLandscape"
            android:id="@+id/button9"
            android:text="@string/text_button_nine">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/ActionButtonLandscape"
            android:id="@+id/buttonPlus"
            android:text="@string/text_button_plus">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/ActionButtonLandscape"
            android:id="@+id/buttonMinus"
            android:text="@string/text_button_minus">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/ActionDoubledButtonLandscape"
            android:layout_span="2"
            android:id="@+id/buttonEqual"
            android:text="@string/text_button_equal">
        </com.google.android.material.button.MaterialButton>

    </TableRow>
    <TableRow
        android:layout_width="wrap_content">

        <com.google.android.material.button.MaterialButton
            style="@style/DigitButtonLandscape"
            android:id="@+id/button0"
            android:text="@string/text_button_zero">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/DigitButtonLandscape"
            android:id="@+id/button1"
            android:text="@string/text_button_one">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/DigitButtonLandscape"
            android:id="@+id/button2"
            android:text="@string/text_button_two">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/DigitButtonLandscape"
            android:id="@+id/button3"
            android:text="@string/text_button_three">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/DigitButtonLandscape"
            android:id="@+id/button4"
            android:text="@string/text_button_four">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/DigitButtonLandscape"
            android:id="@+id/button5"
            android:text="@string/text_button_five">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            style="@style/DigitButtonLandscape"
            android:id="@+id/button6"
            android:text="@string/text_button_six">
        </com.google.android.material.button.MaterialButton>

    </TableRow>
</android.widget.TableLayout>